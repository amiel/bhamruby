<dl id="person_<%=@person.id -%>" class="person">
  <dt>Name</dt><dd><%=h @person.name -%></dd>
  <dt>Email</dt><dd><%=h @person.email -%></dd>
  <dt>Phone</dt><dd><%=number_to_phone @person.phone -%></dd>
<% if @person.company -%>
  <dt>Company</dt><dd><%=h @person.company.name -%></dd>
<% end -%>
  <dt>Description</dt><dd><%=h(@person.description).gsub("\n",'<br>') -%>&nbsp;</dd>
  <dt>Links</dt><dd><%=h @person.links -%>&nbsp;</dd>
<% if @person == current_person then -%>
  <dt>&nbsp;</dt><dd><%= link_to 'Edit', [:edit, @person] -%> | <%=link_to 'Destroy', @person, :confirm => 'Are you sure?', :method => :delete -%></dd>
<% end %>
</dl>
