<% submit ||= 'Save' -%>
<% form_for(@project) do |f| %>
  <%= f.error_messages %>
  <dl id="event_<%=@project.id -%>" class="edit event">
    <dt><%=f.label :name -%></dt><dd><%=f.text_field :name -%></dd>
    <dt><%=f.label :description -%></dt><dd><%=f.text_area :description -%></dd>
    <dt><%=f.label :url -%></dt><dd><%=f.text_field :url -%></dd>
    <dt><%=f.label :maintainer -%></dt><dd><%=f.collection_select :maintainer_id, Person.all, :id, :name, {:prompt=>true} -%></dd>
    <dt><%=f.label :links -%></dt><dd><%=f.text_area :links -%></dd>
    <dt>&nbsp;</dt><dd><%=f.submit submit -%></dd>
  </dt>
<% end %>
