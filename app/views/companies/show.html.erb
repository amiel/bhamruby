<dl id="company_<%= @company.id -%>" class="company">
  <dt>Name</dt><dd><%=h @company.name -%></dd>
  <dt>Logo</dt><dd><%= image_tag @company.logo.url :thumb %>
  <dt>Url</dt><dd><%=link_to h(@company.url), @company.url -%></dd>
  <dt>Address</dt><dd><%=h(@company.address).gsub("\n",'<br>') -%></dd>
  <dt>Phone</dt><dd><%=number_to_phone @company.phone -%></dd>
<% if @company.owner -%>
  <dt>Owner</dt><dd><%=h @company.owner.name -%></dd>
<% end -%>
  <dt>Links</dt><dd><%=h @company.links -%></dd>
<% if can_i_edit(@comapny) -%>
  <dt>&nbsp;</dt><dd><%=link_to 'Edit', [:edit, @company] -%> | <%=link_to 'Destroy', @company, :confirm => 'Are you sure?', :method => :delete -%></dd>
<% end %>
</dl>
